{
  "expo": {
    "name": "CampoTech",
    "slug": "campotech",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "campotech",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#16a34a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "tech.campo.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "CampoTech necesita acceso a la cámara para tomar fotos de los trabajos completados.",
        "NSPhotoLibraryUsageDescription": "CampoTech necesita acceso a las fotos para adjuntar imágenes a los trabajos.",
        "NSLocationWhenInUseUsageDescription": "CampoTech usa tu ubicación para mostrar trabajos cercanos y registrar la ubicación de los trabajos completados."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#16a34a"
      },
      "package": "tech.campo.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir a CampoTech acceder a tu cámara para tomar fotos de trabajos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Permitir a CampoTech acceder a tus fotos para adjuntar a los trabajos."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Permitir a CampoTech usar tu ubicación para mostrar trabajos cercanos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#16a34a"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      }
    }
  }
}
