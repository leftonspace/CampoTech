  sourceItem  PriceItem @relation("SourceItem", fields: [sourceItemId], references: [id], onDelete: Cascade)
  relatedItem PriceItem @relation("RelatedItem", fields: [relatedItemId], references: [id], onDelete: Cascade)
  createdBy   User?     @relation("PriceRelationCreator", fields: [createdById], references: [id])

