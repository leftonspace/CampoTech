  userAgent   String? @map("user_agent")

  createdAt DateTime @default(now()) @map("created_at")

  request DataAccessRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)

  @@index([requestId])
  @@index([action])
  @@index([createdAt])
  @@map("data_request_audit_logs")
}

