/// Cached exchange rates from various sources
/// Updated hourly via scraper (BLUE, MEP) or API (OFICIAL, CRYPTO)
model ExchangeRate {
  id          String             @id @default(cuid())
  source      ExchangeRateSource
  buyRate     Decimal            @map("buy_rate") @db.Decimal(12, 4) // Compra
  sellRate    Decimal            @map("sell_rate") @db.Decimal(12, 4) // Venta
  averageRate Decimal            @map("average_rate") @db.Decimal(12, 4) // (buy + sell) / 2
  fetchedAt   DateTime           @default(now()) @map("fetched_at")
  validUntil  DateTime           @map("valid_until") // Cache expiry
  isStale     Boolean            @default(false) @map("is_stale") // True if fetcher failed but using cached

  createdAt DateTime @default(now()) @map("created_at")

  @@index([source, fetchedAt])
  @@index([validUntil])
  @@map("exchange_rates")
}

/// Price change history for audit trail (AFIP compliance)
/// Tracks every modification to price items with full context
model PriceItemHistory {
  id            String            @id @default(cuid())
  priceItemId   String            @map("price_item_id")
  previousPrice Decimal           @map("previous_price") @db.Decimal(12, 2)
  newPrice      Decimal           @map("new_price") @db.Decimal(12, 2)
  changeReason  PriceChangeReason @map("change_reason")
  changePercent Decimal           @map("change_percent") @db.Decimal(5, 2)

  // Context for the change
  indexSource  String?  @map("index_source") // CAC_ICC_GENERAL, INDEC_IPC, etc.
  indexPeriod  String?  @map("index_period") // "2025-12" format
  indexRate    Decimal? @map("index_rate") @db.Decimal(6, 3)
  exchangeRate Decimal? @map("exchange_rate") @db.Decimal(12, 4)

  // Audit fields
  changedById String   @map("changed_by_id")
  changedAt   DateTime @default(now()) @map("changed_at")
  notes       String?

  // Relations
  priceItem PriceItem @relation("PriceItemHistory", fields: [priceItemId], references: [id], onDelete: Cascade)
  changedBy User      @relation("PriceChangesMade", fields: [changedById], references: [id])

  @@index([priceItemId, changedAt])
  @@index([changedById])
  @@index([changeReason])
  @@map("price_item_history")
}

/// Monthly inflation indices from CAC/INDEC
/// Entered manually via apps/admin dashboard
model InflationIndex {
  id          String               @id @default(cuid())
  source      InflationIndexSource
  period      String // "2025-12" format
  rate        Decimal              @db.Decimal(6, 3) // 4.250 = 4.25%
  publishedAt DateTime             @map("published_at")
  scrapedAt   DateTime             @default(now()) @map("scraped_at") // Or entered_at for manual
  rawData     Json?                @map("raw_data") // Original scraped/source data

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([source, period])
  @@index([source, period])
  @@index([publishedAt])
  @@map("inflation_indices")
}

/// Scrape schedule for automated index retrieval
/// Tracks when to next scrape each source and the last known period
model ScrapeSchedule {
  id     String               @id @default(cuid())
  source InflationIndexSource @unique

  // Last successful scrape info
  lastScrapedAt     DateTime? @map("last_scraped_at")
  lastScrapedPeriod String?   @map("last_scraped_period") // "2025-12" format

  // Next expected report date (from INDEC "Próximo informe técnico")
  nextReportDate DateTime? @map("next_report_date")

  // Scrape status tracking
  scrapeAttempts Int       @default(0) @map("scrape_attempts") // Attempts on current report day
  lastAttemptAt  DateTime? @map("last_attempt_at")
  lastError      String?   @map("last_error")

  // Flags
  isWaitingForUpdate Boolean @default(false) @map("is_waiting_for_update") // True on report day until new data found

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("scrape_schedules")
}

/// Bulk price adjustment events (audit log)
/// Tracks when an organization applies inflation/exchange adjustments
model PriceAdjustmentEvent {
  id             String @id @default(cuid())
  organizationId String @map("organization_id")

  // Index used for adjustment
  indexSource InflationIndexSource @map("index_source")
  indexPeriod String               @map("index_period")
  indexRate   Decimal              @map("index_rate") @db.Decimal(6, 3)

  // Adjustment applied
  extraPercent    Decimal @map("extra_percent") @db.Decimal(5, 2)
  totalAdjustment Decimal @map("total_adjustment") @db.Decimal(6, 3) // index + extra

  // Scope of adjustment
  adjustmentType  AdjustmentType @map("adjustment_type")
  specialtyFilter String?        @map("specialty_filter") // Only adjust PLOMERO items, etc.

  // Results
  itemsAffected    Int     @map("items_affected")
  totalValueBefore Decimal @map("total_value_before") @db.Decimal(14, 2)
  totalValueAfter  Decimal @map("total_value_after") @db.Decimal(14, 2)

  // Audit
  appliedById String   @map("applied_by_id")
  appliedAt   DateTime @default(now()) @map("applied_at")
  notes       String?

  // Relations
  organization Organization @relation("OrgPriceAdjustments", fields: [organizationId], references: [id], onDelete: Cascade)
  appliedBy    User         @relation("PriceAdjustmentsApplied", fields: [appliedById], references: [id])

  @@index([organizationId, appliedAt])
  @@index([appliedById])
  @@map("price_adjustment_events")
}
